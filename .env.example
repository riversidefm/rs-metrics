# rs-metrics-service Environment Configuration
# Copy this file to .env and update values as needed

# Application
NODE_ENV=development
APP_PORT=3000
APP_HOST=localhost
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL="postgresql://rs-metrics:rs-metrics_password@localhost:5434/rs-metrics_db?schema=public"
POSTGRES_USER=rs-metrics
POSTGRES_PASSWORD=rs-metrics_password
POSTGRES_DB=rs-metrics_db
POSTGRES_PORT=5434

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BROKER_URL="localhost:9092"
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# Dapr Configuration
DAPR_HTTP_PORT=3501
DAPR_GRPC_PORT=50001
PUB_SUB_NAME="kafka-pub-sub"
KAFKA_TOPIC="rs-metrics-service-topic"
KAFKA_TOPIC_RAW_PAYLOAD="rs-metrics-service-topic-raw-payload"
DAPR_EXPOSE_SUBSCRIPTION_ENDPOINT="true"

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Swagger/OpenAPI
SWAGGER_PATH=api/docs
SWAGGER_TITLE="rs-metrics-service API"
SWAGGER_DESCRIPTION="API documentation for rs-metrics service"
SWAGGER_VERSION=1.0.0

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Health Check
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_KAFKA=true

# Feature Flags (LaunchDarkly)
LAUNCHDARKLY_SDK_KEY=your-launchdarkly-sdk-key
FEATURE_FLAGS_ENABLED=false

# Monitoring & Observability
OTEL_SERVICE_NAME=rs-metrics
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090

# Development Only
ENABLE_DEBUG_ROUTES=true
PRISMA_DEBUG=false
